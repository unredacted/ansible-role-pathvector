---
extends: default

rules:
  line-length:
    max: 120
    level: warning

  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']

  comments:
    min-spaces-from-content: 2

  braces:
    max-spaces-inside: 1

  brackets:
    max-spaces-inside: 1

  indentation:
    spaces: 2
    indent-sequences: true

ignore: |
  .venv/
  venv/
  .github/
  molecule/

---
extends: default

rules:
  line-length:
    max: 200
    level: warning

  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']

  comments:
    min-spaces-from-content: 1

  comments-indentation: false

  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

  braces:
    max-spaces-inside: 1

  brackets:
    max-spaces-inside: 1

  indentation:
    spaces: 2
    indent-sequences: true

ignore: |
  .venv/
  venv/
  .github/
